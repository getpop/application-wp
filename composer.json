{
    "name": "getpop/application-wp",
    "type": "library",
    "description": "Implementation for WordPress of contracts from package \"Application\"",
    "keywords": [
        "PoP",
        "application-wp"
    ],
    "homepage": "https://github.com/getpop/application-wp",
    "license": "MIT",
    "authors": [
        {
            "name": "Leonardo Losoviz",
            "email": "leo@getpop.org",
            "homepage": "https://getpop.org"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": "~7.2",
        "getpop/application": "dev-master",
        "getpop/engine-wp": "dev-master"
    },
    "require-dev": {
        "pop-schema/customposts": "dev-master",
        "phpunit/phpunit": ">=8.5",
        "squizlabs/php_codesniffer": "^3.0",
        "szepeviktor/phpstan-wordpress": "^0.6.2"
    },
    "suggest": {
        "pop-schema/customposts": "Integrates well with Custom Posts"
    },
    "autoload": {
        "psr-4": {
            "PoP\\ApplicationWP\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "PoP\\ApplicationWP\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs src tests",
        "fix-style": "phpcbf src tests",
        "analyse": "phpstan analyse -c phpstan.neon.dist"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "config": {
        "sort-packages": true
    }
}
